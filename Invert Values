using System.Linq;
namespace Solution
{
  public static class ArraysInversion
  {
    public static int[] InvertValues(int[] input)
    {
      //создаем цикл, при котором каждое значение массива будет меняться на противоположное
      for (int i = 0; i < input.Length; i++)
        {
          input[i] = -input[i];
      }
      return input;
    }
  }
}
